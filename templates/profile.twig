{% extends "layout.twig" %}

{% block title %}{{ 'navigation.profile'|trans }}{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>{{ 'navigation.profile'|trans }}</h1>
    </div>

    <form action="#" method="post">
        <div class="control-group">
            <label class="control-label" for="password">{{ 'login.password'|trans }}</label>
            <div class="controls">
                <input type="password" name="_password" id="password" maxlength="100" placeholder="Password" required/>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <button type="reset" class="btn">Reset</button>
                <button type="submit" class="btn">{{ 'profile.change'|trans }}</button>
            </div>
        </div>
    </form>
{% endblock %}