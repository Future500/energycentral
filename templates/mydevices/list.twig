{% extends "layout.twig" %}

{% block title %}{{ 'navigation.mydevices'|trans }}{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>{{ 'navigation.mydevices'|trans }}</h1>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>{{ 'mydevices.devicenumber'|trans }}</th>
                <th>{{ 'mydevices.zipcode'|trans }}</th>
                <th>{{ 'mydevices.housenumber'|trans }}</th>
                <th>{{ 'mydevices.options'|trans }}</th>
            </tr>
        </thead>

        <tbody>
            {% for device in devices %} {# Show all devices the user has access to #}
                <tr>
                    <td>{{ device.deviceid }}</td>
                    <td>{{ device.zipcode }}</td>
                    <td>{{ device.housenumber }}</td>
                    <td><a href="/mydevices/view/{{ device.deviceid }}">{{ 'mydevices.viewstats'|trans }}</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}