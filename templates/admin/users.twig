{% extends "layout.twig" %}

{% block title %}{{ 'navigation.admin.users'|trans }}{% endblock %}

{% block content %}
    <div class="page-header">
        <h3>{{ 'navigation.admin.users'|trans }}</h3>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>{{ 'admin.user'|trans }}</th>
                <th>{{ 'navigation.options'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %} {# Show all users #}
                <tr>
                    <td>{{ user.username }}</td>
                    <td><a href="/admin/users/{{ user.userid }}">Edit</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}