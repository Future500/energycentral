{% block pagination %}
    <div class="pagination pagination-centered">
        <ul>
            {% for page in pages %}
                {% if page is same as(false) %}
                    <li class="active"><a href="#">{{ current_page }}</a></li>
                {% elseif page starts with '...' %}
                    <span>...</span>
                {% else %}
                    <li><a href="?p={{ page }}">{{ page }}</a></li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% endblock %}